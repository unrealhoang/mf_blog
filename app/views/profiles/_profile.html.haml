.row
  .span4
    .photo.img-polaroid
      %img{:alt => profile.name, :src => profile.avatar, :style => "width: 240px; height: 180px; display: inline; margin:10px"}/
  .span8 
    .text
      .name
        %a{:href => profile_path(profile)}
          %h3= profile.name
      %p= profile.biography.html_safe
      - if profile.twitter
        %i
          %a{:href => "http://twitter.com/#{profile.twitter}"} @#{profile.twitter}
      - if profile.facebook
        %i
          %a{:href => profile.facebook_url}= profile.facebook
      - if profile.linkedin
        %i
          %a{:href => profile.linkedin_url}= profile.linkedin
