= form_for @profile, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :username, :class => 'control-label'
    .controls
      = f.text_field :username, :class => 'text_field'
  .control-group
    = f.label :password, :class => 'control-label'
    .controls
      = f.text_field :password, :class => 'text_field'
  .control-group
    = f.label :avatar, :class => 'control-label'
    .controls
      = f.text_field :avatar, :class => 'text_field'
  .control-group
    = f.label :biography, :class => 'control-label'
    .controls
      = f.text_area :biography, :class => 'text_area'
  .control-group
    = f.label :facebook, :class => 'control-label'
    .controls
      = f.text_field :facebook, :class => 'text_field'
  .control-group
    = f.label :linkedin, :class => 'control-label'
    .controls
      = f.text_field :linkedin, :class => 'text_field'
  .control-group
    = f.label :twitter, :class => 'control-label'
    .controls
      = f.text_field :twitter, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), profiles_path, :class => 'btn'
