- model_class = Profile
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:username)
      %th= model_class.human_attribute_name(:password)
      %th= model_class.human_attribute_name(:avatar)
      %th= model_class.human_attribute_name(:biography)
      %th= model_class.human_attribute_name(:facebook)
      %th= model_class.human_attribute_name(:linkedin)
      %th= model_class.human_attribute_name(:twitter)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @profiles.each do |profile|
      %tr
        %td= link_to profile.id, profile_path(profile)
        %td= profile.username
        %td= profile.password
        %td= profile.avatar
        %td= profile.biography
        %td= profile.facebook
        %td= profile.linkedin
        %td= profile.twitter
        %td= profile.name
        %td=l profile.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_profile_path(profile), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), profile_path(profile), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_profile_path, :class => 'btn btn-primary'
