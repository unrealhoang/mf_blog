- model_class = Post
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:author_id)
      %th= model_class.human_attribute_name(:category_id)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:is_top_article)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @posts.each do |post|
      %tr
        %td= link_to post.id, post_path(post)
        %td= post.title
        %td= post.content
        %td= post.author_id
        %td= post.category_id
        %td= post.image
        %td= post.is_top_article
        %td=l post.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(post), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= will_paginate @posts, :renderer => PostsHelper::BootstrapLinkRenderer
= link_to t('.new', :default => t("helpers.links.new")), new_post_path, :class => 'btn btn-primary'
