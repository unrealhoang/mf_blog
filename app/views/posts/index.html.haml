- if @query
  .row
    %section.article-stream-search.span8
      Showing results for 
      %em= @query
  .row{:style => "margin-top: 0px"}
- else
  - if @top_articles
    = render :partial => "posts/top_articles", :object => @top_articles
  .row{:style => "margin-top: 40px"}
    = render :partial => "posts/article_thumb_small", :collection => @first_three

.row{:style => "margin-top: 0px"}
  - if !@query
    .span8.offset2
      %hr
  .span8
    = render :partial => "posts/articles_stream"
  .span4
    = render :partial => "posts/sidebar_posts"
