h1, h2, h3, h4, h5, h6 {
  font-family:  Helvetica, Arial, sans-serif;
  font-weight: normal;
}
.pagetitle {
  margin: 0 0 10px 0;
  color: #f6612c;
}
.headline {
  font-family: "SEGOEUIL", "Segoe UI", Frutiger, "Frutiger Linotype", "Dejavu Sans", "Helvetica Neue", Arial, sans-serif;
  font-weight: 900;
}
body {
  background: url(<%= image_path "bg.png" %>);
  font-family: "Segoe UI", Frutiger, "Frutiger Linotype", "Dejavu Sans", "Helvetica Neue", Arial, sans-serif;
}
hr {
  border-top: 1px solid #000;
}

img {
  box-sizing: border-box;
}

#main {
  margin-top: 43px;
}
.breadcrumb {
  margin-top: 20px;
}
.content {
  background-color: #eee;
  padding: 20px;
  margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
  -webkit-border-radius: 0 0 6px 6px;
  -moz-border-radius: 0 0 6px 6px;
  border-radius: 0 0 6px 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  box-shadow: 0 1px 2px rgba(0,0,0,.15);
}

.thumbnail {
  img {
    width: 100%; 
    height: 100px;

  }
  h5 { 
    height: 60px;
  }
}
.site-container {
  margin: auto;
  width: 980px;
  padding: 0px 25px;
  background: none repeat scroll 0% 0% rgb(255, 255, 255);
  box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.1);
}
.entry-bottom {
  margin-top: 20px;
}

.entry-featured {
  margin-top: 20px;
}

.entry-content {
  margin-top: 20px;
}


.footer {
  text-align: center;
  padding: 30px 0;
  border-top: 1px solid #e5e5e5;
  background-color: #f5f5f5;
  ul {
    list-style: none;
  }
}

.footer-links {
  margin: 10px 0;
  li:first-child {
    padding-left: 0;
  }
  li {
    display: inline;
    padding: 0 2px;
  }
}

.search-box {
  float: right;
  margin-top:-5px;
  margin-right: -7px;

}

.carousel-indicators {
  position: absolute;
  top: 15px;
  right: 15px;
  z-index: 5;
  margin: 0;
  list-style: none;

  li {
    display: block;
    float: left;
    width: 10px;
    height: 10px;
    margin-left: 5px;
    text-indent: -999px;
    background-color: #ccc;
    background-color: rgba(255,255,255,.25);
    border-radius: 5px;
  }
  .active {
    background-color: #fff;
  }
}

.separator {
  height: 30px;
}

#back-top {
  position: fixed;
  bottom: 30px;
  right: 30px;
  a {
    width: 54px;
    display: block;
    text-align: center;
    font: 11px/100% Arial, Helvetica, sans-serif;
    text-transform: uppercase;
    text-decoration: none;
    color: #bbb;

    /* transition */
    -webkit-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
  }
  a:hover {
    color: #000;
  }
  span {
    width: 54px;
    height: 54px;
    display: block;
    margin-bottom: 7px;
    background: #ddd url(up-arrow.png) no-repeat center center;

    /* rounded corners */
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    border-radius: 10px;

    /* transition */
    -webkit-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
  }
  a:hover span {
    background-color: #777;
  }
}

ul.nav li.dropdown:hover ul.dropdown-menu {
  display: block;
}

