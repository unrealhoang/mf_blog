body {
  background: url(<%= image_path "site-bg5.png" %>)
}

img {
  box-sizing: border-box;
}

#main {
  margin-top: 43px;
}
.breadcrumb {
  margin-top: 20px;
}
.content {
  background-color: #eee;
  padding: 20px;
  margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
  -webkit-border-radius: 0 0 6px 6px;
  -moz-border-radius: 0 0 6px 6px;
  border-radius: 0 0 6px 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  box-shadow: 0 1px 2px rgba(0,0,0,.15);
}
.top-article {
  position: relative;
  .title {
    width: 65%;
    top: 40px;
    overflow: visible;
    position: absolute;

    .img-title-text {
      h2 {
        color: black;
        background-color: white;
        padding: 2px 2px 2px 0;
        display: inline;
      }
      a {
        color: black;
      }
    }

    .img-time-text {
      color: #fff;
       background:rgb(245, 20, 20);
    }
  }
}

.normal-thread {
	padding-top: 10px;
  img {
    width: 100%; 
    height: 350px;
    margin-top: 10px;
    box-sizing: border-box;
    border: 2px solid #dcdcd1
  }
  h4 {
    height: 40px;
    margin: 0px;
    margin-top: 10px;
    margin-bottom: 5px;
  }
}
.img-profile-avatar {
  max-width: 140px; 
  float:right;
  display: inline;
  margin:5px;
}
.thumbnail {
  img {
    width: 100%; 
    height: 100px;

  }
  h5 { 
    height: 60px;
  }
}

.entry-bottom {
  margin-top: 20px;
}

.entry-featured {
  margin-top: 20px;
}

.entry-content {
  margin-top: 20px;
}
.sidebar-post {
  clear: both;
  img {
    width: 100%;
    height: 169px;
  }
}
