@font-face { 
  font-family: "SEGOEUIL";
  src: url('http://fontsforweb.com/public/fonts/1409/SEGOEUIL.eot');
  src: local("Segoe UI Light"), url('http://fontsforweb.com/public/fonts/1409/SEGOEUIL.woff') format("woff"), url('http://fontsforweb.com/public/fonts/1409/SEGOEUIL.ttf') format("truetype");
}
h1, h2, h3, h4, h5, h6 {
  font-family:  "SEGOEUIL", "Segoe UI", Frutiger, "Frutiger Linotype", "Dejavu Sans", "Helvetica Neue", Arial, sans-serif;
}
body {
  background: url(<%= image_path "site-bg5.png" %>);
  font-family: "Segoe UI", Frutiger, "Frutiger Linotype", "Dejavu Sans", "Helvetica Neue", Arial, sans-serif;
}
hr {
  border-top: 1px solid #000;
}

img {
  box-sizing: border-box;
}

#main {
  margin-top: 43px;
}
.breadcrumb {
  margin-top: 20px;
}
.content {
  background-color: #eee;
  padding: 20px;
  margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
  -webkit-border-radius: 0 0 6px 6px;
  -moz-border-radius: 0 0 6px 6px;
  border-radius: 0 0 6px 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  box-shadow: 0 1px 2px rgba(0,0,0,.15);
}
.top-articles {
  position: relative;
  .title {
    width: 65%;
    top: 40px;
    overflow: visible;
    position: absolute;

    .img-title-text {
      h2 {
        color: black;
        background-color: white;
        padding: 2px 2px 2px 0;
        display: inline;
      }
      a {
        color: black;
      }
    }

    .img-time-text {
      color: #fff;
      background:rgb(245, 20, 20);
    }
  }
}

.normal-thread {
	padding-top: 10px;
  img {
    width: 100%; 
    height: 350px;
    margin-top: 10px;
    box-sizing: border-box;
    border: 2px solid #dcdcd1
  }
  h4 {
    height: 40px;
    margin: 0px;
    margin-top: 10px;
    margin-bottom: 5px;
  }
}
.img-profile-avatar {
  width: 240px; 
  height: 135px; 
  float: left;
  display: inline; 
  margin:10px;
}
.thumbnail {
  img {
    width: 100%; 
    height: 100px;

  }
  h5 { 
    height: 60px;
  }
}

.entry-bottom {
  margin-top: 20px;
}

.entry-featured {
  margin-top: 20px;
}

.entry-content {
  margin-top: 20px;
}
.sidebar-post {
  clear: both;
  img {
    width: 100%;
    height: 169px;
  }
}
