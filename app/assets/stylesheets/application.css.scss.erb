  .footer {
    text-align: center;
    padding: 30px 0;
    margin-top: 70px;
    border-top: 1px solid #e5e5e5;
    background-color: #f5f5f5;
  }
  .footer ul {
    list-style: none;
  }
  .footer-links {
    margin: 10px 0;
  }
  .footer-links li:first-child {
    padding-left: 0;
  }
  .footer-links li {
    display: inline;
    padding: 0 2px;
  }
  .search-box {
    float: right;
    margin-top:-5px;
    margin-right: -7px;

  }

  .carousel-indicators {
    position: absolute;
    top: 15px;
    right: 15px;
    z-index: 5;
    margin: 0;
    list-style: none;

    li {
      display: block;
      float: left;
      width: 10px;
      height: 10px;
      margin-left: 5px;
      text-indent: -999px;
      background-color: #ccc;
      background-color: rgba(255,255,255,.25);
      border-radius: 5px;
    }
    .active {
      background-color: #fff;
    }
  }
